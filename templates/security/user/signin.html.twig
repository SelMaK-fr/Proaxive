{% extends 'frontoffice/base.html.twig' %}

{% block body %}
    <div class="body-background mh-fullvh">
        <div class="container">
            <div class="flex justify-content-center">
                <div style="min-width: 500px;">
                    <div class="card card-shadow t-3">
                        <div class="card-body p-4">
                            <h1 class="title-login">Panel Proaxive</h1>
                            <span class="text-muted">Bienvenue sur Proaxive, merci de vous connecter.</span>
                            <div class="login-form-horizontal mt-4">
                                <form method="post" action="">
                                    <div class="form-group mb-3">
                                        <label for="email" class="form-label">Adresse courriel</label>
                                        <div class="input-group input-group-prefix">
                                            <span class="input-group-case case-prefix"><i class="ri-mail-fill fs-18px"></i></span>
                                            <input type="text" id="email" name="email" class="form-control" placeholder="john@gmail.com">
                                        </div>
                                    </div>
                                    <div class="form-group mb-3 p-relative">
                                        <label for="password" class="form-label">Mot de passe</label>
                                        <div class="input-group input-group-prefix">
                                            <span class="input-group-case case-prefix"><i class="ri-key-2-fill fs-18px"></i></span>
                                            <input type="password" name="password" id="password" class="form-control">
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        <div class="form-group">
                                            <div class="checkbox d-inline-block">
                                                <input id="checkbox1" type="checkbox">
                                                <label class="text-muted" for="checkbox1">Se souvenir de moi</label>
                                            </div><a class="link" style="float: right" href="forget-password.html">Mot de passe oublié ?</a>
                                        </div>
                                        <div class="text-right mt-4">
                                            <button type="submit" class="btn-sk-two btn-lg rd-1">Se connecter</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="text-center border-top-dashed pt-3 mt-3">
                                <p class="pt-3">
                                    Votre accès est confidentiel, ne le communiquez jamais à autruis.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="p-relative t-4 text-center">
                        2021, 2024. Propulsé par <strong>Proaxive</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}