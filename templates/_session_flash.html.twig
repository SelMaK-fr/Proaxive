<div class="flash-message">
{% for message in flash.get('panel-info') %}
    <div class="ui info message" id="message-flash">
        <div class="header">
            <strong>Information</strong> : {{ message }}
        </div>
    </div>
{% endfor %}
{% for message in flash.get('panel-success') %}
