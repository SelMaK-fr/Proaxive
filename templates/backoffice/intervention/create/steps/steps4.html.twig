{% extends 'backoffice/base.html.twig' %}

{% block title %}Nouvelle intervention{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header border-bottom-dashed">
            <h3>Nouvelle intervention</h3>
        </div>
        <div class="card-body">
            <div class="grid-12">
                <div class="col-3_sm-12 border-right-dashed">
                    {{ include('backoffice/intervention/create/_navigation.html.twig', {currentMenu:'step4'}) }}
                </div>
                <div class="col-9_sm-12 p-relative">
                    {{ form.renderStart | raw }}
                    <div class="pl-4 pr-4 input-radio-block">
                        <div class="grid-12">
                            <div class="col-6_sm-12">
                                {{ form.renderField('observation') | raw }}
                                <h4 class="text-pink">Informations</h4>
                                <p>
                                    Les champs "Note au client" et "Observation" seront affich√©s dans l'espace client.
                                    <br>
                                    Aucun des ces champs sont visibles sur le suivi en ligne.
                                </p>
                            </div>
                            <div class="col-6_sm-12">
                                {{ form.renderField('note_technician') | raw }}
                                {{ form.renderField('note_customer') | raw }}
                            </div>
                        </div>
                    </div>
                    <div class="absolute-button">
                        <button type="submit" name="step-passed" class="btn btn-light-info"><i class="ri-checkbox-circle-line"></i> Passer</button>
                        <button type="submit" class="btn btn-light-four"><i class="ri-checkbox-circle-line"></i> Suivant</button>
                    </div>
                    {{ form.renderEnd | raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}