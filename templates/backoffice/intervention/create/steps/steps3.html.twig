{% extends 'backoffice/base.html.twig' %}

{% block title %}Nouvelle intervention{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header border-bottom-dashed">
            <h3>Nouvelle intervention</h3>
            <span>Veuillez sélectionner un équipement pour cette intervention.</span>
        </div>
        <div class="card-body">
            <div class="grid-12">
                <div class="col-3_sm-12 border-right-dashed">
                    {{ include('backoffice/intervention/create/_navigation.html.twig', {currentMenu:'step3'}) }}
                </div>
                <div class="col-9_sm-12 p-relative choice_radio_custom">
                    {{ form.renderStart | raw }}
                    <div class="pl-4 pr-4 input-radio-block">
                        <div class="grid-12">
                            <div class="col-12_sm-12">
                                <div class="divGrid-4">
                                {{ form.renderField('equipments_id') | raw }}
                                </div>
                                <p class="mt-3">
                                    <span class="d-block">L'équipement n'existe pas ?</span>
                                    <button type="button" class="btn btn-sk-one mt-2">Créer un équipement</button>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="absolute-button">
                        <button type="submit" class="btn btn-light-four"><i class="ri-checkbox-circle-line"></i> Suivant</button>
                    </div>
                    {{ form.renderEnd | raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}