{% extends 'backoffice/base.html.twig' %}

{% block title %}Nouvelle intervention{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header border-bottom-dashed">
            <h3>Nouvelle intervention</h3>
            <span>Veuillez renseigner les détails principaux de l'intervention</span>
        </div>
        <div class="card-body">
            <div class="grid-12">
                <div class="col-3_sm-12 border-right-dashed">
                <div class="card-inside all-border p-3">
                    <div class="flex align-items-center">
                        <div class="mr-3">
                            <span><i class="fs-32px ri-{% if c.is_society is not null %}building{% else %}user-2{% endif %}-fill"></i></span>
                        </div>
                        <div>
                            <h4 class="fs-16px">{{ c.fullname }}</h4>
                            <p class="m-0">
                                {{ getData('Téléphone', c.phone) }}
                                {{ getData('Ville', [c.zipcode, c.city]) }}
                                {{ getData('Courriel', c.mail) }}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-inside all-border mt-3 p-3">
                    <div class="flex align-items-center">
                        <div class="mr-3">
                            <span><i class="fs-32px ri-computer-line"></i></span>
                        </div>
                        <div>
                            <h4 class="fs-16px">{{ e.name }}</h4>
                            <p class="m-0">

                            </p>
                        </div>
                    </div>
                </div>
                </div>
                <div class="col-9_sm-12">
                    <div class="pl-4 pr-4">
                        {{ form.renderStart | raw }}
                        <div class="grid-12">
                            <div class="col-6_sm-12">
                                {{ form.renderField('name') | raw }}
                                <div class="flex justify-content-space-between align-items-center">
                                    <div>
                                        {{ form.renderField('sort') | raw }}
                                        {{ form.renderField('way_type') | raw }}
                                    </div>
                                    <div>
                                        {{ form.renderField('way_steps') | raw }}
                                        {{ form.renderField('a_priority') | raw }}
                                    </div>
                                </div>
                                {{ form.renderField('description') | raw }}
                                {{ form.renderField('before_breakdown') | raw }}
                            </div>
                            <div class="col-6_sm-12">
                                <div class="form-group mb-3">
                                    {% if auth.roles != "SUPER_ADMIN" %}
                                        <label class="form-label" for="form_intervention_args-users_id">Technicien</label>
                                        <div><span class="text-green fw-500">Vous</span> ({{ auth.fullname }})</div>
                                        <input type="hidden" value="{{ auth.company_id }}" name="form_intervention_args[company_id]">
                                        {{ form.renderField('users_id') | raw }}
                                    {% else %}
                                        {{ form.renderField('company_id') | raw }}
                                        {{ form.renderField('users_id') | raw }}
                                    {% endif %}
                                </div>
                                <div class="form-group ml-4">
                                    <span class="d-block fw-600">Temps consacré</span>
                                    <em>Pensez à bien renseigner votre tarif horaire dans les paramètres.</em>
                                    <div class="mt-3">
                                        <div class="flex justify-content-space-between">
                                            <div>
                                                <div class="form-group mb-3 form-check">
                                                    <input class="palmtree-form-control form-check-input" type="radio" id="" name="form_intervention_args[total_time]" value="1" checked>
                                                    <label for="">1 Heure</label>
                                                </div>
                                                <div class="form-group mb-3 form-check">
                                                    <input class="palmtree-form-control form-check-input" type="radio" id="" name="form_intervention_args[total_time]" value="2" >
                                                    <label for="">2 Heures</label>
                                                </div>
                                                <div class="form-group mb-3 form-check">
                                                    <input class="palmtree-form-control form-check-input" type="radio" id="" name="form_intervention_args[total_time]" value="3" >
                                                    <label for="">3 Heures</label>
                                                </div>
                                            </div>
                                            <div>
                                                <div class="form-group mb-3 form-check">
                                                    <input class="palmtree-form-control form-check-input" type="radio" id="" name="form_intervention_args[total_time]" value="4" checked>
                                                    <label for="">4 Heure</label>
                                                </div>
                                                <div class="form-group mb-3 form-check">
                                                    <input class="palmtree-form-control form-check-input" type="radio" id="" name="form_intervention_args[total_time]" value="5" >
                                                    <label for="">5 Heures</label>
                                                </div>
                                                <div class="form-group mb-3 form-check">
                                                    <input class="palmtree-form-control form-check-input" type="radio" id="" name="form_intervention_args[total_time]" value="0" >
                                                    <label for="">Désactiver</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="absolute-button">
                            <button type="submit" class="btn btn-light-four"><i class="ri-checkbox-circle-line"></i> Créer</button>
                        </div>
                        {{ form.renderEnd(false) | raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}