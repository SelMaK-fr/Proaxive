{% extends 'backoffice/base.html.twig' %}

{% block title %}
    Intervention du {{ i.created_at | format_date('none', 'EEEE d MMM Y', null, 'gregorian', 'fr') }}
{% endblock %}

{% block body %}
    {{ include('backoffice/intervention/includes/_meta_btn.html.twig') }}
    <div class="grid-12">
        <div class="col-9_sm-12">
            <ul id="tabs" class="nav-components">
                <li><a href="{{ url_for('intervention_update', {id:i.id}) }}"><i class="ri-information-fill"></i> TÃ¢ches/Diagnostic</a></li>
                <li><a class="selected" href="#"><i class="ri-file-2-fill"></i> Observations et notes</a></li>
                <li><a href="{{ url_for('intervention_files', {id:i.id}) }}"><i class="ri-file-2-fill"></i> Fichiers joints</a></li>
            </ul>
            <div class="tabs-wrapper">
                <div class="tabs-content">
                    <div class="card">
                        <div class="card-body p-4">
                            {{ form.renderStart | raw }}
                            {{ form.renderField('description') | raw }}
                            <div class="grid-12">
                                <div class="col-6_sm-12">
                                    {{ form.renderField('observation') | raw }}
                                    {{ form.renderField('handling_customer') | raw }}
                                </div>
                                <div class="col-6_sm-12">
                                    {{ form.renderField('note_customer') | raw }}
                                    {{ form.renderField('note_technician') | raw }}
                                </div>
                            </div>
                            <button type="submit" class="btn btn-light-four">Enregistrer</button>
                            {{ form.renderEnd(false) | raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ include('backoffice/intervention/includes/_data_details.html.twig') }}
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/intervention/dash.status.js') }}" defer></script>
{% endblock %}