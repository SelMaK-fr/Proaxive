{% extends 'backoffice/base.html.twig' %}

{% block title %}{{ e.name }} de {{ e.customer_name }}{% endblock %}

{% set toolbar_tool = 1 %}

{% block toolbar %}
    <div class="toolbar-tools flex justify-content-space-between">
        <button type="button" data-target="update_intervention" data-toggle="modal" class="btn btn-light-pink"> <i class="ri-delete-bin-7-line"></i> Supprimer cet équipement</button>
    </div>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-tabs">
            <ul id="tabs" class="border-bottom">
                <li><a href="{{ url_for('equipment_read', {'id' : e.id}) }}"><i class="ri-computer-line"></i> Vue générale</a></li>
                <li><a class="selected" href="{{ url_for('equipment_update', {'id' : e.id}) }}"><i class="ri-pencil-fill"></i> Modifier</a></li>
                <li><a href="{{ url_for('equipment_update_specs', {'id' : e.id}) }}"><i class="ri-cpu-line"></i> Configuration système</a></li>
            </ul>
            <div class="p-4">
                {{ include('backoffice/equipment/_form.html.twig', {'device': null}) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css"
    />
{% endblock %}
